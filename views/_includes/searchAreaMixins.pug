mixin loadSearchArea(createBtn, no_hide)
    - let clssNm = no_hide ? 'searchArea' : 'searchArea hide';
    section(class=clssNm)
        if createBtn
            form.searchCreate.clearfix(method='post' accept-charset='utf-8' action='/mypages/index')
                input.searchInput(type='text' name='' style='width: 70%;float:left;' id='')
                .submit
                    input(type='submit' style='width: 20%;float:right;' value='タイトルを登録')
        else
            input.searchInput(type='text' name='' id='')
        ul.searchOutput(style='display:none')
